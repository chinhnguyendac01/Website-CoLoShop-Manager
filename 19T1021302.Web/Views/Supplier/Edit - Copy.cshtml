@model _19T1021302.DomainModels.Supplier
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Supplier/Save" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="SupplierID" value="@Model.SupplierID">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên nhà cung cấp:</label>
                <div class="col-sm-10">
                    <input name="SupplierName" type="text" class="form-control" value="@Model.SupplierName">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tên giao dịch:</label>
                <div class="col-sm-10">
                    <input name="ContactName" type="text" class="form-control" value="@Model.ContactName">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ:</label>
                <div class="col-sm-10">
                    <input name="Address" type="text" class="form-control" value="@Model.Address">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Điện thoại:</label>
                <div class="col-sm-10">
                    <input name="Phone" type="text" class="form-control" value="@Model.Phone">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Quốc gia:</label>
                <div class="col-sm-10">
                    <select name="Country" class="form-control">                       
                        <option>--Chọn quốc gia</option>
                        @foreach (var item in _19T1021302.BusinessLayers.CommonDataService.ListOfCountries())
                        {
                            if (item.CountryName == Model.Country)
                            {
                                <option selected value="@Model.Country">@Model.Country</option>
                            }
                            else
                            {
                                <option value="@Model.Country">@item.CountryName</option>
                            }
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thành phố:</label>
                <div class="col-sm-10">
                    <input name="City" type="text" class="form-control" value="@Model.City">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mã bưu chính:</label>
                <div class="col-sm-10">
                    <input name="PostalCode" type="text" class="form-control" value="@Model.PostalCode">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Supplier/" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>