@model _19T1021302.DomainModels.ProductPhoto
@{

}

<div class="box box-primary">
    <div class="box-header with-border ">
    </div>

    <div class="box-body">
        <form class="form-horizontal" action="~/Product/SavePhoto" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" name="ProductID" value="@ViewBag.ProductID" />
            <input type="hidden" name="PhotoID" value="@Model.PhotoID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh:</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="uploadPhoto" id="uploadPhoto"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                    <input type="hidden" class="form-control" name="Photo" value="@Model.Photo">
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img src="~/@Model.Photo" id="Photo" name="Photo" class="img img-bordered" style="width:150px" />
                    @Html.ValidationMessageFor(m => m.Photo, "", new { @style = "color:red" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Description" value="@Model.Description" autofocus>
                    @Html.ValidationMessageFor(m => m.Description, "", new { @style = "color:red" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiển thị:</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" name="DisplayOrder" value="@Model.DisplayOrder" autofocus>
                    @Html.ValidationMessageFor(m => m.DisplayOrder, "", new { @style = "color:red" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10 checkbox">
                    <label><input type="checkbox" name="IsHidden" value="true" checked="@Model.IsHidden">Ẩn ảnh (không hiển thị với khách hàng)</label>
                    @Html.ValidationMessageFor(m => m.IsHidden, "", new { @style = "color:red" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/product/edit/@ViewBag.ProductID">
                        <i class="fa fa-ban"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">
    </div>

</div>

